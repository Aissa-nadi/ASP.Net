@model ArticleEtSousCategorieViewModel
@{
    ViewData["Title"] = "Detail";
}

<br />

<h2 class="text-info">Détail Article</h2>
<br />

<div class="whiteBg">
    @Html.HiddenFor(m => Model.Article.Id)
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="Article.Id" class="col-form-label"></label>
        </div>
        <div class="col-5">
            <input asp-for="Article.Id" readonly class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="Article.Name" class="col-form-label"></label>
        </div>
        <div class="col-5">
            <input asp-for="Article.Name" readonly class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="Article.prix" class="col-form-label"></label>
        </div>
        <div class="col-5">
            <input asp-for="Article.prix" readonly class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-5 offset-2">
            <partial name="_DetailEtRetourpartial" model="@Model.Article.Id" />

        </div>
    </div>
</div>


