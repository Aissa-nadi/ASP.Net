@model IEnumerable<Article>
@{
    ViewData["Title"] = "Index";
}

<div class="whiteBg border">
    <div class="row">
        <div class="col-6">
            <h2 class="text-info">Liste des Articles</h2>
        </div>

        <div class="col-6 text-right">
            <partial name="_CreateButtonAjouterPartial" />
        </div>
    </div>
    <div>
        @if (Model.Count() == 0)
        {
            <p class="text-danger">Aucune Article !</p>
        }
        else
        {
            <table class="table table-striped border">
                <tr class="table-secondary">
                    <th>
                        @Html.DisplayNameFor(m => m.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.prix)
                    </th>
                    <th>

                    </th>
                </tr>
                @foreach (var item in Model)
                {
            <tr>
                <td>
                    @Html.DisplayFor(m => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(m => item.prix)
                </td>
                <td style="width:150px">
                    <div class="btn-group" role="group">
                        <a asp-action="Edit" class="btn btn-primary text-white" asp-route-id="@item.Id">Modifier</a>
                        <a asp-action="Delete" class="btn btn-danger text-white" asp-route-id="@item.Id">Supprimer</a>
                        <a asp-action="Detail" class="btn btn-success text-white" asp-route-id="@item.Id">Detail</a>
                    </div>
                </td>
            </tr>
                }
            </table>
        }
    </div>
</div>




